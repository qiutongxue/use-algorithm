---
import { fetchCodes, fetchTitle } from "@/utils/fetchCodes";

const titleMap = await fetchTitle();
const codesMap = await fetchCodes();
---

<script>
  function debounce(func: Function, delay: number) {
    let timer: null | number | NodeJS.Timeout = null;
    return function (...args) {
      if (timer) clearTimeout(timer);

      timer = setTimeout(() => {
        func.apply(this, args);
      }, delay);
    };
  }
  const search = document.querySelector("#search");

  const posts = document.querySelectorAll(".wrapper .post");
  search.addEventListener(
    "input",
    debounce((e) => {
      const target = (e.target as HTMLInputElement).value.toLowerCase();
      if (target === "") {
        posts.forEach((post) => post.classList.remove("hidden"));
        return;
      }
      posts.forEach((post) => {
        const source = (
          post.getAttribute("data-search") as string
        ).toLowerCase();
        if (source.includes(target)) {
          post.classList.remove("hidden");
        } else {
          post.classList.add("hidden");
        }
      });
    }, 200)
  );
</script>

<html>
  <head>
    <meta charset="utf-8" />
    <title>Use-Algorithm</title>
  </head>

  <body>
    <div class="main-icon"></div>
    <div class="search">
      <input type="text" id="search" />
    </div>
    <div class="wrapper">
      {
        Object.entries(titleMap)
          .sort()
          .map(([post, title]) => (
            <a
              class="post"
              href={`tool-codes/${post}`}
              data-search={post + title}
            >
              <span class="title-main">{title}</span>
              <span class="title-sub">
                {post
                  .split(/[\-_]/)
                  .map((s) => s[0].toUpperCase() + s.slice(1))
                  .join(" ")}
              </span>
              <div class="icon-wrapper">
                {codesMap[post] &&
                  codesMap[post].map(({ lang }) => <div data-lang={lang} />)}
              </div>
            </a>
          ))
      }
    </div>
  </body>
</html>
