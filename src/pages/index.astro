---
// Welcome to Astro! Everything between these triple-dash code fences

import { fetchCodes, fetchTitle } from "@/utils/fetchCodes";

const toolCodes = await fetchTitle();
---

<!-- Below is your "component template." It's just HTML, but with
     some magic sprinkled in to help you build great templates. -->
<html>
  <head>
    <meta charset="utf-8" />
  </head>

  <body>
    <div class="wrapper">
      {
        Object.entries(toolCodes)
          .sort()
          .map(([toolCode, title]) => (
            <a href={`tool-codes/${toolCode}`}>{title}</a>
          ))
      }
    </div>
  </body>
</html>
<style>
  .wrapper {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    max-width: 960px;
    margin: auto;
    height: 100vh;
  }

  .wrapper a {
    display: block;
    margin: 1rem;
    padding: 2rem 1rem;
    text-decoration: none;
    color: rgba(100, 100, 100, 0.5);
    font-size: large;
    font-weight: bold;
    box-shadow: 1px 1px 10px 0px rgba(0, 0, 0, 0.2);
  }
</style>
