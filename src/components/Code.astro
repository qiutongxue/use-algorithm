---
import CodeBlock from "./CodeBlock.astro";
import CodeGroup from "./CodeGroup.astro";
import type { Props as CodeBlockProps } from "./CodeBlock.astro";
import type { Props as CodeGroupProps } from "./CodeGroup.astro";

type Props = Partial<CodeBlockProps & CodeGroupProps>
 
const { code, lang, groups } = Astro.props;
---

{
  groups
    ? <CodeGroup groups={groups} />
    : code && lang 
      ? <CodeBlock code={code} lang={lang} />
      : <></>
}
